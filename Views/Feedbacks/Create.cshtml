@model DotNetScoringService.Models.Feedback

@{
    ViewData["Title"] = "Create";
}

<div class="col text-center my-4">
    <hr>
    <h2>Feedback</h2>
    <hr>
</div>
<div class="row justify-content-center">
    <div class="mx-auto col-10 col-md-8 col-lg-6 pb-5">
    <form asp-action="Create">

        <div class="card border-primary rounded-0" style="border-color: #343a40 !important;">
            <div class="card-header p-0">
                <div class="bg-info text-white text-center py-2 bg-dark">
                    <h3><i class="fa fa-envelope"></i> Feedback</h3>
                    <p class="m-0">Fill in the form to send your feedback</p>
                </div>
            </div>
            <div class="card-body p-3">

                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group"> 
                        <label asp-for="Message" class="control-label"></label>
                        <input asp-for="Message" class="form-control" type="text" />
                        <span asp-validation-for="Message" class="text-danger"></span>
                </div>
                <div class="col text-center mt-4">
                    <input class="btn btn-primary" type="submit" value="Send">
                </div>
            </div>
    </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
