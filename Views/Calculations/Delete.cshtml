@model DotNetScoringService.Models.Calculation

@{
    ViewData["Title"] = "Delete";
}

<div style="text-align: center;" class="mb-4">
        <div class="col my-4" >
            <h2>Are you sure you want to delete this calculation?</h2>
        </div>
    <p>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</p>
    <p>@Html.DisplayNameFor(model => model.DateCreated): @Html.DisplayFor(model => model.DateCreated)</p>
    <form asp-action="Delete">
        <a role="button" class="btn btn-primary" asp-controller="Home" asp-action="Index">Cancel</a>
        <button type="submit" class="btn btn-secondary">Yes</button>
      </form>
</div>