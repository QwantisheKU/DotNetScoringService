@model DotNetScoringService.Models.Calculation

@{
    ViewData["Title"] = "Create";
}

<div class="col text-center my-4">
    <hr>
    <h2>Form</h2>
    <hr>
</div>
<!-- Form -->
<div class="row">
    <div class="mx-auto col-10 col-md-8 col-lg-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Income" class="control-label"></label>
                <input asp-for="Income" class="form-control" />
                <span asp-validation-for="Income" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HomeOwnership" class="control-label"></label>
                <select asp-for="HomeOwnership" asp-items="Html.GetEnumSelectList<HomeOwnership>()" class="form-control"></select>
                <span asp-validation-for="HomeOwnership" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmploymentLength" class="control-label"></label>
                <input asp-for="EmploymentLength" class="form-control" />
                <span asp-validation-for="EmploymentLength" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoanIntent" class="control-label"></label>
                <select asp-for="LoanIntent" asp-items="Html.GetEnumSelectList<LoanIntent>()" class="form-control"></select>
                <span asp-validation-for="LoanIntent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoanAmount" class="control-label"></label>
                <input asp-for="LoanAmount" class="form-control" />
                <span asp-validation-for="LoanAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoanInterestRate" class="control-label"></label>
                <input asp-for="LoanInterestRate" class="form-control" />
                <span asp-validation-for="LoanInterestRate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoanTerm" class="control-label"></label>
                <input asp-for="LoanTerm" class="form-control" />
                <span asp-validation-for="LoanTerm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoanDefault" class="control-label"></label>
                <select asp-for="LoanDefault" asp-items="Html.GetEnumSelectList<LoanDefault>()" class="form-control"></select>
                <span asp-validation-for="LoanDefault" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreditHistoryLength" class="control-label"></label>
                <input asp-for="CreditHistoryLength" class="form-control" />
                <span asp-validation-for="CreditHistoryLength" class="text-danger"></span>
            </div>
            <div class="col text-center my-4">
                <input class="btn btn-primary" type="submit" value="Calculate">
            </div>
            <div class="mb-4"></div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
